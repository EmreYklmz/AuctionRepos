@model Auction.WebUI.ViewModels.Manage.AssignRoleViewModel

@{
    ViewData["Title"] = "RevokeRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rolden çıkar</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model.RoleList.Any())
        {
            <form asp-action="RevokeRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <select asp-for="RoleId" asp-items="Model.RoleList" class="form-control"></select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <input asp-for="UserId" type="hidden" />
                <div class="form-group">
                    <input type="submit" value="Rolü Kaldır" class="btn btn-danger" />
                </div>
            </form>
        }
        else
        {
            <div class="justify-content-center">
                <h2>Bu kullaniciya ait herhangi bir rol bulunamadı.</h2>
            </div>
        }

    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
