@model IEnumerable<Auction.WebUI.ViewModels.Manage.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Roles</h2>

<p>
    <a asp-action="CreateRole" class="btn btn-primary">Yeni Rol Ekle</a>

</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>*@
            <th class="">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    <a asp-controller="Manage" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-sm btn-success">Düzenle</a>
                    <a asp-controller="Manage" asp-action="RoleDetail" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-controller="Manage" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
