@model Auction.Application.CategoryServices.Dtos.UpdateCategoryViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@Model.CategoryName Güncelle</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryUrlName" class="control-label"></label>
                <input asp-for="CategoryUrlName" class="form-control" />
                <span asp-validation-for="CategoryUrlName" class="text-danger"></span>
            </div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedById" type="hidden" />
            <input asp-for="ModifiedById" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-sm btn-success btn-sm btn-flat"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
