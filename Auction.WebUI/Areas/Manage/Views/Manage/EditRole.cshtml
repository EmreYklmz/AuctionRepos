@model Auction.WebUI.ViewModels.Manage.RoleViewModel

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string msg = ViewBag.IsRoleEditable ? " rolünü düzenleyebilirsiniz." : "rolü bir sistem rolüdür düzenleyemezsiniz.";
}

@if (ViewBag.IsRoleEditable)
{
    <h1 class="text-success">@Model.Name @msg</h1>
}
else
{
    <h1 class="text-danger">@Model.Name @msg </h1>

}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @if (ViewBag.IsRoleEditable)
                {
                    <input asp-for="Name" class="form-control" />
                }
                else
                {
                    <input asp-for="Name" class="form-control" disabled />
                }


                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.IsRoleEditable)
                {
                    <input type="submit" value="Save" class="btn btn-success" />

                }
                else
                {
                    <input type="submit" value="Save" class="btn btn-success" disabled />

                }
                | <a asp-action="Roles">Geri Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
